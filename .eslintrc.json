{
  "root": true,
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    // "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "eol-last": "warn",
    "comma-dangle": 0,
    "import/named": 0,
    "arrow-parens": 0,
    "import/prefer-default-export": 0,
    "no-unused-vars": 0,
    "no-underscore-dangle": 0,
    "object-property-newline": "warn",
    "import/no-unresolved": [
      2,
      {
        "commonjs": true
      }
    ],
    "no-shadow": [
      "error",
      {
        "allow": ["req", "res", "err"]
      }
    ]
  },
  "plugins": ["prettier"]
}
